# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
PORT=3000
NODE_ENV=development
HOST= '0.0.0.0'

# ========================================
# CONFIGURACIÓN DE MONGODB
# ========================================
# Cambia 'savam_db' por el nombre de tu base de datos
MONGODB_URI=mongodb://127.0.0.1:27017/?directConnection=true&serverSelectionTimeoutMS=2000&appName=mongosh+2.5.9
MONGO_URL=mongodb://127.0.0.1:27017/savam

# ========================================
# CONFIGURACIÓN DE JWT (JSON Web Token)
# ========================================
# IMPORTANTE: Cambia JWT_SECRET por una clave única y segura en producción
# Puedes generar una clave segura con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY5MmE1Zjk0MjFmOWRhM2I0MjE4MmMxZCIsImlhdCI6MTc2NDM4NDY2MCwiZXhwIjoxNzY0NDcxMDYwfQ.dmKlo8P4UuT61pqtWgTtc5EvQ4w-QooMNJ4BovDBjf0
JWT_EXPIRES_IN=24h

# ========================================
# CONFIGURACIÓN DE RATE LIMITING
# ========================================
# Limita el número de peticiones para prevenir ataques
# RATE_LIMIT_WINDOW_MS: Ventana de tiempo en milisegundos (900000 = 15 minutos)
# RATE_LIMIT_MAX_REQUESTS: Máximo de peticiones permitidas en la ventana de tiempo
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURACIÓN DE CORS
# ========================================
# Permite peticiones desde otros dominios
# Usa '*' para permitir todos los orígenes (solo en desarrollo)
# En producción, especifica el dominio exacto: https://tudominio.com
CORS_ORIGIN=*

# ========================================
# CONFIGURACIÓN DE TELEGRAM
# ========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
# Obtener de https://my.telegram.org
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
# Obtener la session con el npx tsx src/scripts/generateSession.ts ejecutando el archivo
TELEGRAM_STRING_SESSION=